<h1>הודעה חדשה</h1>

<%= error_messages_for :message %>

<% form_for(@message) do |f| %>
  <p>
    <b>שם</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Email</b><br />
    <%= f.text_field :email %>
  </p>

  <p>
    <b>חברה</b><br />
    <%= f.text_field :company %>
  </p>

  <p>
    <b>טלפון</b><br />
    <%= f.text_field :phone %>
  </p>

  <p>
    <b>נושא</b><br />
    <%= f.text_field :subject %>
  </p>

  <p>
    <b>הודעה</b><br />
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.submit "צור" %>
  </p>
<% end %>
